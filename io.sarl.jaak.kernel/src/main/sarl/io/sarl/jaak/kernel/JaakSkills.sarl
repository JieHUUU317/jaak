skill PhysicBodySkill implements PhysicBody {
	
	uses DefaultContextInteractions
	
	var physicSpace : JaakPhysicSpace
	
	val position = new Point2i
	
	def install() {
		var spaceId = UUID::fromString(defaultContext.ID.toString + "!!!JaakPhysicSpace")
		physicSpace = defaultContext.getOrCreateSpace(
			typeof(JaakPhysicSpaceSpecification),
			spaceId, owner.ID)
		if (physicSpace === null) {
			throw new IllegalStateException("No physic space found")
		}
		physicSpace.spawnBody(owner.ID, this)
	}
		
	def uninstall() {
		physicSpace?.killBody(owner.ID, this)
		physicSpace = null
	}

